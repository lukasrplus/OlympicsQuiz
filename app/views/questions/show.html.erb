<!-- NEW VERSION -->

  <% next_page = @q.index + 1 %>

  <% user = User.find_by(:id => session[:u_id]) %>

  <%= form_tag update_score_url, method: 'patch' do %>

    <% @a.each do |answer| %>

      <%= label_tag do %>
      <%= radio_button_tag('answer_code', answer.values) %>
      <%= answer.content %> <br>
      <% end %>


      <%= hidden_field_tag 'page_index', next_page %>

      <%= hidden_field_tag 'user_id', user.id %>


    <% end %>

  <br>
  <%= button_tag 'Submit your answer', class: 'next_page' %>

  <% end %>





